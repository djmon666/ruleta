def fiveLines():
    i=0
    while i<5:
        print " "
        i=i+1
fiveLines()

def cleanScreen():
    i=0
    while i<25:
        print " "
        i=i+1
cleanScreen()

def deleteLowercase(p):
    return p.upper()
print deleteLowercase('hellorer')

def isRightLetter(c):
    consonnes="bcdfghjklmnpqrstvwxyz"
    vow="aeiou"
    for letra in c:
        if letra not in consonnes:
            return False
        elif len(c)>1:
            return False
        else:
            return True
print isRightLetter("e")

def countWords(p):
    palabras=p.split()
    if len(palabras)<=3:
        return True
    else:
        return False
print countWords("tre tr4etr tretw")

def isACorrectPanel(p):
    word="abcdefghijklmnopqrstuvwxyz"
    palabras=p.split()
    if len(palabras)<=3:
        return True
    else:
        return False
    for palabras in word:
        if palabra<4:
            return True
    return False
print isACorrectPanel("msmsmsmsm ama4mrewamma fdfasf ertty")
