def fiveLines():
    i=0
    while i<5:
        print " "
        i=i+1
fiveLines()

def cleanScreen():
    i=0
    while i<25:
        print " "
        i=i+1
cleanScreen()

def deleteLowercase(p):
    return p.upper()
print deleteLowercase('hellorer')

def isRightLetter(c):
    consonnes="bcdfghjklmnpqrstvwxyz"
    vow="aeiou"
    for letra in c:
        if letra not in consonnes:
            return False
        elif len(c)>1:
            return False
        else:
            return True
print isRightLetter("e")

def countWords(p):
    palabras=p.split()
    if len(palabras)<=3:
        return True
    else:
        return False
print countWords("tre tr4etr tretw")

import string

def isACorrectPanel(p):
    if not countWords(p):
        return False
    else:
        for letter in p:
            if not (letter in string.letters or letter == " "):
                return False
        return True
print isACorrectPanel("trgfsdg 453rtet trefgsd")

def secretPanel(p):
    o=""
    i=0
    while i<len(p):
        if p[i]==" ":
            o=o+" "
        else:
            o=o+"_"
        i=i+1
    return o
print secretPanel("gfgcbn yrytfytf")


def containsLetter(p, c):
    return c in p
print containsLetter("hello", "b")
